<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorTitle"
        android:elevation="10dp"
        android:paddingHorizontal="13dp">

        <TextView
            android:id="@+id/leftTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:textSize="22dp"
            android:layout_weight ="1"/>
        <TextView
            android:id="@+id/rightTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:textSize="22dp"
            android:layout_weight ="1"
            android:gravity="right"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight ="1">

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:fadeScrollbars="false"
            android:scrollbarThumbVertical="@color/colorThumb"
            android:scrollbarTrackVertical="@color/colorTrack"
            android:padding="10dp"
            android:paddingTop="20dp"
            android:layout_weight ="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:id="@+id/notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="50dp">

                    <TextView
                        android:id="@+id/firstWords"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#222"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:layout_marginLeft="50dp"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="20dp"
                        android:background="#222"/>
                    <TextView
                        android:id="@+id/secondWords"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#222"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:layout_marginRight="50dp"/>

                </LinearLayout>
                <TextView
                    android:id="@+id/info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#222"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"/>

                <Button
                    android:id="@+id/test_start_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="#FFF"
                    android:text="테스트 시작"
                    android:background="@drawable/main_button"
                    android:paddingHorizontal="35dp"
                    android:paddingVertical="15dp"/>

            </LinearLayout>

        </ScrollView>

        <TextView
            android:id="@+id/word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#222"
            android:textSize="30dp"
            android:gravity="center"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/fail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_close"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/finish_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#222"
            android:textSize="18dp"
            android:text="테스트 완료!\n설문을 계속 진행해주세요"
            android:gravity="center"
            android:visibility="gone"/>
        <Button
            android:id="@+id/finish_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/main_button"
            android:textColor="#FFF"
            android:textSize="22dp"
            android:text="설문 진행하기"
            android:paddingHorizontal="35dp"
            android:paddingVertical="15dp"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/save_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/test_button_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:paddingHorizontal="3dp"
        android:paddingBottom="3dp"
        android:weightSum="5.0"
        android:visibility="gone">

        <Button
            android:id="@+id/leftButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/iat_button"
            android:textColor="#FFF"
            android:textSize="30dp"
            android:text="왼쪽"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.0"/>
        <Button
            android:id="@+id/rightButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/iat_button"
            android:textColor="#FFF"
            android:textSize="30dp"
            android:text="오른쪽"/>

    </LinearLayout>

</LinearLayout>